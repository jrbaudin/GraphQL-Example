{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors":true,
        "sourceMap": false,
        "outDir": "./lib",
        "declaration": false,
        "pretty": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "src/services/**/*",
        "src/init-services.ts",
        "src/utils/socketpush.ts",
        "src/controllers/cloudinaryController.ts",
        "src/controllers/companiesController.ts",
        "src/controllers/locationsController.ts",
        "src/controllers/pushController.ts",
        "src/controllers/salesController.ts",
        "src/controllers/usersController.ts",
        "src/models/companiesModel.ts",
        "src/models/locationsModel.ts",
        "src/models/salesModel.ts",
        "src/models/usersModel.ts"
    ]
}